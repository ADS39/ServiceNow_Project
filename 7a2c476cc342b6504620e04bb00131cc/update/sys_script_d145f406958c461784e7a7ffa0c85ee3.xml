        // Trigger portfolio recalculation when holdings change
        var portfolioId = current.getValue('portfolio') || previous.getValue('portfolio');
        if (!gs.nil(portfolioId)) {
            var portfolioGr = new GlideRecord('x_1285971_wealth_m_portfolio');
            if (portfolioGr.get(portfolioId)) {
