        <script><![CDATA[
        // Calculate unrealized gain/loss
        var shares = parseFloat(current.getValue('shares_quantity') || 0);
        var costBasis = parseFloat(current.getValue('cost_basis_per_share') || 0);
        var currentPrice = parseFloat(current.getValue('current_price') || 0);
        
        var totalCostBasis = shares * costBasis;
        var currentMarketValue = shares * currentPrice;
        var unrealizedGL = currentMarketValue - totalCostBasis;
        var unrealizedGLPct = totalCostBasis > 0 ? ((unrealizedGL / totalCostBasis) * 100) : 0;
        
        current.setValue('total_cost_basis', totalCostBasis.toFixed(2));
        current.setValue('current_market_value', currentMarketValue.toFixed(2));
        current.setValue('unrealized_gain_loss', unrealizedGL.toFixed(2));
        current.setValue('unrealized_gain_loss_pct', unrealizedGLPct.toFixed(2));
    ]]></script>
